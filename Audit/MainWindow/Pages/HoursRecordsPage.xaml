<Page x:Class="Audit.MainWindow.Pages.HoursRecordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Audit.MainWindow"
      mc:Ignorable="d"
      Title="HoursRecordsPage">
    <Grid Background="Lavender">
        <DataGrid x:Name="HoursRecordsGrid" AutoGenerateColumns="False">
            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="WHITE"/>
                    <Setter Property="BorderThickness" Value="0,1,0,1" />
                </Style>
            </DataGrid.Resources>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Идентификатор"  Binding="{Binding Path=Id}" Width="2*" />
                <DataGridTextColumn Header="Идентификатор компании" Binding="{Binding Path=CompanyId}" Width="6*" />
                <DataGridTextColumn Header="Идентификатор сотрудника" Binding="{Binding Path=WorkerId}" Width="3*" />
                <DataGridTextColumn Header="Дата" Binding="{Binding Path=Date}" Width="3*" />
                <DataGridTextColumn Header="Часы" Binding="{Binding Path=Hours}" Width="3*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
