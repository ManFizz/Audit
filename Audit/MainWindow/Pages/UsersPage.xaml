<Page x:Class="Audit.MainWindow.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Audit.MainWindow"
      mc:Ignorable="d"
      Title="UsersPage">
    <Grid Background="Lavender">
        <DataGrid x:Name="UsersGrid" AutoGenerateColumns="False">
            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="WHITE"/>
                    <Setter Property="BorderThickness" Value="0,1,0,1" />
                </Style>
            </DataGrid.Resources>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Идентификатор"  Binding="{Binding Path=Id}" Width="2*" />
                <DataGridTextColumn Header="Логин" Binding="{Binding Path=Login}" Width="6*" />
                <DataGridTextColumn Header="Пароль" Binding="{Binding Path=Password}" Width="3*" />
                <DataGridTextColumn Header="Идентификатор сотрудника" Binding="{Binding Path=IdWorker}" Width="3*" />
                <DataGridTextColumn Header="Тип сотрудника" Binding="{Binding Path=Type}" Width="3*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
